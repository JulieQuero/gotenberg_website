{# templates/base.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body>

<nav class="navbar">
    <ul class="nav-list">
        <li><a href="{{ path('homepage') }}">Accueil</a></li>
        {% if app.user %}
            <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
        {% else %}
            <li><a href="{{ path('app_login') }}">Se connecter</a></li>
            <li><a href="{{ path('create_account') }}">Créer un compte</a></li>
        {% endif %}
        {% if app.user %}
            <li><a href="{{ path('pdf_generation') }}">Génération de PDF</a></li>
            <li><a href="{{ path('history') }}">Historique</a></li>
            <li><a href="{{ path('subscription_change') }}">Changer l'abonnement</a></li>
        {% endif %}
    </ul>
</nav>

{% block body %}{% endblock %}

</body>
</html>
